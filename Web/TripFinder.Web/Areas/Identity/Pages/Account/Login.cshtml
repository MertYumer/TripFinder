@page
@model TripFinder.Web.Areas.Identity.Pages.Account.LoginModel

@{
    ViewData["Title"] = "Log in";
}

<section id="page-title-area" class="section-padding overlay">
    <div class="container d-table-cell align-middle">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title text-center">
                    <h2>Sign in</h2>
                    <span class="title-line"><i class="fa fa-car"></i></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3 m-auto">
                <div class="form-page-content">
                    <div class="form">
                        <form method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="email">
                                <input asp-for="Input.Email" type="text" placeholder="Email">
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="password">
                                <input asp-for="Input.Password" type="password" placeholder="Password">
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="checkbox p-1">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                            <div>
                                <button class="btn btn-warning btn-lg" type="submit"><i class="fa fa-sign-in"></i> Sign In</button>
                            </div>
                        </form>
                    </div>
                    <div class="create-ac">
                        <p>Don't have an account? <a asp-page="./Register">Sign Up</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
