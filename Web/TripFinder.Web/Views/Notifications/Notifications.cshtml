@model TripFinder.Web.ViewModels.Notifications.NotificationsAllViewModel

@{
    ViewData["Title"] = "Notifications";
}

<section id="page-title-area" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title text-center">
                    <h1>Notifications:</h1>
                    <hr />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 text-center trip-info" style="background-color: rgba(1,1,1,0.5);">
                <h2>Last received:</h2>
                @foreach (var notification in Model.ReceivedNotifications)
                {
                    <div class="trip-info">
                        <div class="card-body">
                            @switch (notification.Subject)
                            {
                                case NotificationSubject.RequestJoin:
                                    <h5>@notification.SenderFirstName @notification.SenderLastName wants to join your <a asp-area="" asp-controller="Trips" asp-action="Details" asp-route-id="@notification.TripId">trip</a>.</h5>
                                    <a class="btn btn-success" asp-area="" asp-controller="Notifications" asp-action="AcceptTripRequest" asp-route-notificationId="@notification.Id"><i class="fa fa-check"></i> Accept</a>
                                    <a class="btn btn-danger" asp-area="" asp-controller="Notifications" asp-action="RejectTripRequest" asp-route-notificationId="@notification.Id"><i class="fa fa-times"></i> Decline</a>
                                    break;

                                case NotificationSubject.CancelJoin:
                                    <h5>@notification.SenderFirstName @notification.SenderLastName canceled their <a asp-area="" asp-controller="Trips" asp-action="Details" asp-route-id="@notification.TripId">trip</a> request.</h5>
                                    break;

                                case NotificationSubject.AcceptRequest:
                                    <h5>@notification.SenderFirstName @notification.SenderLastName accepted your <a asp-area="" asp-controller="Trips" asp-action="Details" asp-route-id="@notification.TripId">trip</a> request.</h5>
                                    break;

                                case NotificationSubject.RejectRequest:
                                    <h5>@notification.SenderFirstName @notification.SenderLastName rejected your <a asp-area="" asp-controller="Trips" asp-action="Details" asp-route-id="@notification.TripId">trip</a> request.</h5>
                                    break;
                            }
                        </div>
                    </div>
                }
            </div>
            <hr />
            <div class="col-lg-6 text-center trip-info" style="background-color: rgba(1,1,1,0.5);">
                <h2>Last activity:</h2>
                @foreach (var notification in Model.SentNotifications)
                {
                    <div class="trip-info">
                        <div class="card-body">
                            @switch (notification.Subject)
                            {
                                case NotificationSubject.RequestJoin:
                                    <h5>You made request to join @notification.ReceiverFirstName @notification.ReceiverLastName's <a asp-area="" asp-controller="Trips" asp-action="Details" asp-route-id="@notification.TripId">trip</a>.</h5>
                                    break;

                                case NotificationSubject.CancelJoin:
                                    <h5>You canceled your request for @notification.ReceiverFirstName @notification.ReceiverLastName's <a asp-area="" asp-controller="Trips" asp-action="Details" asp-route-id="@notification.TripId">trip</a>.</h5>
                                    break;

                                case NotificationSubject.AcceptRequest:
                                    <h5>You accepted @notification.ReceiverFirstName @notification.ReceiverLastName's <a asp-area="" asp-controller="Trips" asp-action="Details" asp-route-id="@notification.TripId">trip</a> request.</h5>
                                    break;

                                case NotificationSubject.RejectRequest:
                                    <h5>You rejected @notification.ReceiverFirstName @notification.ReceiverLastName's <a asp-area="" asp-controller="Trips" asp-action="Details" asp-route-id="@notification.TripId">trip</a> request.</h5>
                                    break;
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
