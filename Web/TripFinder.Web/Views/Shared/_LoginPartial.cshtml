@using Microsoft.AspNetCore.Identity
@using TripFinder.Data.Models
@inject SignInManager<ApplicationUser> SignInManager

<ul>
    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
    <li><a asp-controller="Home" asp-action="About">About</a></li>
    @if (this.SignInManager.IsSignedIn(this.User))
    {
        <li><a asp-controller="Users" asp-action="Profile">Profile</a></li>
        <li><a href="cars.html">Cars</a></li>
        <li>
            <a href="index.html">Pages</a>
            <ul>
                <li><a href="package.html">Pricing</a></li>
                <li><a href="driver.html">Driver</a></li>
                <li><a href="faq.html">FAQ</a></li>
                <li><a href="help-desk.html">Help Desk</a></li>
                <li><a href="404.html">404</a></li>
            </ul>
        </li>
        <li><a asp-controller="Users" asp-action="Logout">Log out</a></li>
    }
    else
    {
        <li><a asp-controller="Users" asp-action="Login">Log in</a></li>
        <li><a asp-controller="Users" asp-action="Register">Sign up</a></li>
    }
</ul>