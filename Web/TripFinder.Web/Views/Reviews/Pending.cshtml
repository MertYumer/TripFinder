@model TripFinder.Web.ViewModels.Reviews.ReviewsAllViewModel

@{
    ViewData["Title"] = "Pending";
    var reviews = Model.Reviews.ToList();
}

<section id="page-title-area" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title text-center">
                    <h2>Rate users from your last trip</h2>
                    <hr />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-4">
                <div class="trip-info">
                    <div class="form text-center">
                        <form method="post">
                            @for (int i = 0; i < reviews.Count; i++)
                            {
                                <a asp-area="" asp-controller="Users" asp-action="Details" asp-route-id="@reviews[i].Id">
                                    <h5>@reviews[i].FirstName @reviews[i].LastName</h5>
                                </a>
                                <div>
                                    <input type="text" name="id-@i" value="@reviews[i].Id" hidden>
                                </div>
                                <div>
                                    <input type="range" name="rating-@i" class="slider" min="0" max="5" required>
                                </div>
                                <div>
                                    <input type="text" name="comment-@i" placeholder="Comment">
                                </div>
                            }
                            <div class="col justify-content-center">
                                <button class="btn btn-warning btn-lg" type="submit" asp-area="" asp-controller="Reviews" asp-action="Pending"><i class="fa fa-plus-circle"></i> Rate</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
