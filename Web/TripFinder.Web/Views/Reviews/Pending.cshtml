@model TripFinder.Web.ViewModels.Reviews.ReviewsAllViewModel

@{
    ViewData["Title"] = "Pending";
    var reviews = Model.Reviews.ToList();
}

<section id="page-title-area" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title text-center">
                    <h2>Rate users from your last trip</h2>
                    <hr />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form text-center" style="width: 100%;">
                <form method="post">
                    <div class="row">
                        @for (int i = 0; i < reviews.Count; i++)
                        {
                            <div class="col-4">
                                <div class="trip-info">
                                    <a asp-area="" asp-controller="Users" asp-action="Details" asp-route-id="@reviews[i].Id">
                                        <div class="row align-items-center" style="margin: 2%;">
                                            <div class="col-6 text-center mx-auto">
                                                <div class="d-flex flex-row justify-content-center">
                                                    <img src="@reviews[i].AvatarImageUrl" alt="Profile Picture" class="rounded-circle profile-picture pp-small">
                                                </div>
                                            </div>
                                            <div class="col-6 text-center mx-auto">
                                                <h5>@reviews[i].FirstName @reviews[i].LastName</h5>
                                            </div>
                                        </div>
                                    </a>
                                    <div>
                                        <input type="text" name="id-@i" value="@reviews[i].Id" hidden>
                                    </div>
                                    <div>
                                        <input type="number" name="rating-@i" placeholder="Rating" min="0" max="5" required style="width: 90%;">
                                    </div>
                                    <div>
                                        <input type="text" name="comment-@i" placeholder="Comment" style="width: 90%;">
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="row">
                        <div class="col justify-content-center">
                            <button class="btn btn-warning btn-lg" type="submit" asp-area="" asp-controller="Reviews" asp-action="Pending"><i class="fa fa-flag-checkered"></i> Rate</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
