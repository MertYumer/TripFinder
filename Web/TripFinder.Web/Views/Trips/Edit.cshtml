@model TripFinder.Web.ViewModels.Trips.TripEditViewModel;

@{
    ViewData["Title"] = "Edit";
    var totalSeats = this.ViewBag.TotalSeats;
}

<section id="page-title-area" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title text-center">
                    <h2>Edit trip</h2>
                    <span class="title-line"><i class="fa fa-car"></i></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-8 m-auto">
                <div class="form-page-content">
                    <div class="form">
                        <form method="post">
                            <div>
                                <input asp-for="Origin" type="text" placeholder="Origin" readonly value="@EnumMethods.GetDescription((Enum)Model.Origin)">
                            </div>
                            <div>
                                <input asp-for="Destination" type="text" placeholder="Destination" readonly value="@EnumMethods.GetDescription((Enum)Model.Destination)">
                            </div>
                            <div>
                                <span asp-validation-for="DateOfDeparture" class="text-danger"></span>
                                <input asp-for="DateOfDeparture" type="text" min="@DateTime.Now.ToString("yyyy-MM-dd")" placeholder="Date of departure" onfocus="(this.type='date')" />
                            </div>
                            <div>
                                <span asp-validation-for="TimeOfDeparture" class="text-danger"></span>
                                <input asp-for="TimeOfDeparture" type="text" placeholder="Time of departure" id="timeselector">
                            </div>
                            <div>
                                <span asp-validation-for="FreeSeats" class="text-danger"></span>
                                <input asp-for="FreeSeats" type="number" min="1" max="@totalSeats" placeholder="Free seats">
                            </div>
                            <div>
                                <span asp-validation-for="ExpensePerPerson" class="text-danger"></span>
                                <input asp-for="ExpensePerPerson" placeholder="Expense per person">
                            </div>
                            <div>
                                <span asp-validation-for="AdditionalInformation" class="text-danger"></span>
                                <input asp-for="AdditionalInformation" type="text" placeholder="Additional Information">
                            </div>
                            <div class="col justify-content-center">
                                <button class="btn btn-warning btn-lg" type="submit" asp-area="" asp-controller="Trips" asp-action="Edit" asp-route-id="@Model.Id"><i class="fa fa-plus-circle"></i> Edit trip</button>
                                <button class="btn btn-outline-warning btn-lg" type="submit" asp-area="" asp-controller="Trips" asp-action="Details" asp-route-id="@Model.Id"><i class="fa fa-undo"></i> Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(function () {
            $('#timeselector').timeselector({
                hours12: false,
            });
        });
    </script>
}