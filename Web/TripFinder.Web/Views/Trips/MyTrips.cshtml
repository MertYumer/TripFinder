@model TripFinder.Web.ViewModels.Trips.TripsMyViewModel

@{
    ViewData["Title"] = "MyTrips";
}

<section id="page-title-area" class="section-padding overlay">
    <div class="container pt-5 d-none d-md-block">
        <div class="row">
            <div class="col">
                <h3>My trips:</h3>
            </div>
        </div>
        <hr />
        <div class="row">
            @foreach (var trip in Model.MyTrips)
            {
                <div class="col-6 mb-2">
                    <a style="color: wheat;" asp-area="" asp-controller="Trips" asp-action="Details" asp-route-id="@trip.Id">
                        <div class="trip-info">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-5 col-xl-3 col-lg-4 mb-3 mb-md-0">
                                        <div class="d-flex flex-row justify-content-center">
                                            <img src="@trip.DriverAvatarImageUrl" alt="Profile Picture" class="rounded-circle profile-picture pp-small">
                                        </div>
                                        <div class="d-flex flex-row justify-content-center">
                                            <span class="text-md-center">@trip.DriverFirstName</span>
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-xl-9 col-lg-8">
                                        <div class="row">
                                            <div class="col-12 col-xl-6">
                                                <span class="text-muted">From: </span>
                                                <span>@trip.Origin</span>
                                            </div>
                                            <div class="col-12 col-xl-6">
                                                <span class="text-muted">To: </span>
                                                <span>@trip.Destination</span>
                                            </div>
                                            <div class="col-12 col-xl-6">
                                                <span class="text-muted">Date: </span>
                                                <span>@trip.DateOfDeparture.ToString(GlobalConstants.DefaultDateFormat)</span>
                                            </div>
                                            <div class="col-12 col-xl-6">
                                                <span class="text-muted">Time: </span>
                                                <span class="align-top">@trip.TimeOfDeparture.ToString(GlobalConstants.DefaultTimeFormat)</span>
                                            </div>
                                            <div class="col-12 col-xl-6">
                                                <span class="text-muted">Expense per person: </span>
                                                <span>@trip.ExpensePerPerson lv.</span>
                                            </div>
                                            <div class="col-12 col-xl-6">
                                                <span class="text-muted">Seats: </span>
                                                <span>@trip.FreeSeats from @trip.TotalSeats</span>
                                            </div>
                                            <div class="col-12">
                                                <span class="text-muted">Car: </span>
                                                <span>@trip.CarMake @trip.CarModel</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</section>