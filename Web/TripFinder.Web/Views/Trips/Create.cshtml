@model TripFinder.Web.ViewModels.Trips.CreateTripInputModel;

@{
    ViewData["Title"] = "DriverCreate";
}

<section id="page-title-area" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>Create trip</h2>
                    <span class="title-line"><i class="fa fa-car"></i></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-8 m-auto">
                <div class="login-page-content">
                    <div class="login-form">
                        <form method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div>
                                <input asp-for="Origin" type="text" placeholder="Origin">
                                <span asp-validation-for="Origin" class="text-danger"></span>
                            </div>
                            <div>
                                <input asp-for="Destination" type="text" placeholder="Destination">
                                <span asp-validation-for="Destination" class="text-danger"></span>
                            </div>
                            <div>
                                <input asp-for="DateOfDeparture" value="@DateTime.UtcNow.ToString("yyyy-MM-dd")" min="@DateTime.UtcNow.ToString("yyyy-MM-dd")" type="text" placeholder="Date of departure" onfocus="(this.type='date')"/>
                                <span asp-validation-for="DateOfDeparture" class="text-danger"></span>
                            </div>
                            <div>
                                <input asp-for="TimeOfDeparture" type="text" placeholder="Time of departure" onfocus="(this.type='time')"/>
                                <span asp-validation-for="TimeOfDeparture" class="text-danger"></span>
                            </div>
                            <div>
                                <input asp-for="FreeSeats" type="number" placeholder="Free seats">
                                <span asp-validation-for="FreeSeats" class="text-danger"></span>
                            </div>
                            <div>
                                <input asp-for="ExpensePerPerson" type="number" placeholder="Free seats">
                                <span asp-validation-for="ExpensePerPerson" class="text-danger"></span>
                            </div>
                            <div>
                                <input asp-for="AdditionalInformation" type="text" placeholder="Additional Information">
                                <span asp-validation-for="AdditionalInformation" class="text-danger"></span>
                            </div>
                            <div class="log-btn">
                                <button type="submit"><i class="fa fa-sign-in"></i> Create trip</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

