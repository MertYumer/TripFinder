@using Microsoft.AspNetCore.Identity
@using TripFinder.Data.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    var user = await this.UserManager.GetUserAsync(this.User);
}

@{
    ViewData["Title"] = "Delete";
}

<section id="page-title-area" class="section-padding overlay">
    <div class="container d-table-cell align-middle">
        <div class="row justify-content-center">
            <div class="col-md-8 form text-center">
                <h3>Are you sure you want to delete your profile from TripFinder?</h3>
                <form class="row mb-3 justify-content-md-center" method="post">
                    <div class="col-4 col-md-auto">
                        <button class="btn btn-danger btn-lg" type="submit" asp-area="" asp-controller="Users" asp-action="DeletePost" asp-route-id="@user.Id"><i class="fa fa-trash"></i> Delete profile</button>
                        <button class="btn btn-outline-warning btn-lg" type="submit" asp-area="" asp-controller="Users" asp-action="Details" asp-route-id="@user.Id"><i class="fa fa-undo"></i> Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
