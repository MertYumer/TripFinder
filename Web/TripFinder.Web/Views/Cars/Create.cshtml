@model TripFinder.Web.ViewModels.Cars.CarCreateInputModel;

@{
    ViewData["Title"] = "Create";
}

<section id="page-title-area" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title text-center">
                    <h2>Create car</h2>
                    <span class="title-line"><i class="fa fa-car"></i></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 col-md-8 m-auto">
                <div class="form-page-content">
                    <div class="form">
                        <form class="row mb-3" method="post">
                            <div class="col-12 col-lg-6">
                                <div>
                                    <span asp-validation-for="Make" class="text-danger"></span>
                                    <input asp-for="Make" type="text" placeholder="Make">
                                </div>
                                <div>
                                    <span asp-validation-for="Model" class="text-danger"></span>
                                    <input asp-for="Model" type="text" placeholder="Model">
                                </div>
                                <div>
                                    <span asp-validation-for="Type" class="text-danger"></span>
                                    <select asp-for="Type" asp-items="Html.GetEnumSelectList<CarType>()">
                                        <option value="">Car type</option>
                                    </select>
                                </div>
                                <div>
                                    <span asp-validation-for="Color" class="text-danger"></span>
                                    <input asp-for="Color" type="text" placeholder="Color">
                                </div>
                                <div>
                                    <span asp-validation-for="Year" class="text-danger"></span>
                                    <select asp-for="Year" placeholder>
                                        <option value="">Year</option>
                                        <option value="2020">2020</option>
                                        <option value="2019">2019</option>
                                        <option value="2018">2018</option>
                                        <option value="2017">2017</option>
                                        <option value="2016">2016</option>
                                        <option value="2015">2015</option>
                                        <option value="2014">2014</option>
                                        <option value="2013">2013</option>
                                        <option value="2012">2012</option>
                                        <option value="2011">2011</option>
                                        <option value="2010">2010</option>
                                        <option value="2009">2009</option>
                                        <option value="2008">2008</option>
                                        <option value="2007">2007</option>
                                        <option value="2006">2006</option>
                                        <option value="2005">2005</option>
                                        <option value="2004">2004</option>
                                        <option value="2003">2003</option>
                                        <option value="2002">2002</option>
                                        <option value="2001">2001</option>
                                        <option value="2000">2000</option>
                                        <option value="1999">1999</option>
                                        <option value="1998">1998</option>
                                        <option value="1997">1997</option>
                                        <option value="1996">1996</option>
                                        <option value="1995">1995</option>
                                        <option value="1994">1994</option>
                                        <option value="1993">1993</option>
                                        <option value="1992">1992</option>
                                        <option value="1991">1991</option>
                                        <option value="1990">1990</option>
                                    </select>
                                </div>
                                <div>
                                    <span asp-validation-for="PassengerSeats" class="text-danger"></span>
                                    <select asp-for="PassengerSeats">
                                        <option value="">Passenger seats</option>
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                        <option value="6">6</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6" style="text-align:left">
                                <div>
                                    <input asp-for="AllowedSmoking" type="checkbox">
                                    <label asp-for="AllowedSmoking">  Allowed smoking</label>
                                </div>
                                <div>
                                    <input asp-for="AllowedFood" type="checkbox" class="inline-block-child">
                                    <label asp-for="AllowedFood"> Allowed food</label>
                                </div>
                                <div>
                                    <input asp-for="AllowedDrinks" type="checkbox">
                                    <label asp-for="AllowedDrinks"> Allowed drinks</label><br>
                                </div>
                                <div>
                                    <input asp-for="PlaceForLuggage" type="checkbox">
                                    <label asp-for="PlaceForLuggage"> Place for luggage</label><br>
                                </div>
                                <div>
                                    <input asp-for="AllowedPets" type="checkbox">
                                    <label asp-for="AllowedPets"> Allowed pets</label><br>
                                </div>
                                <div>
                                    <input asp-for="HasAirConditioning" type="checkbox">
                                    <label asp-for="HasAirConditioning"> Has air conditioning</label><br>
                                </div>
                            </div>
                            <div class="col justify-content-center">
                                <button class="btn btn-warning btn-lg" type="submit" asp-area="" asp-controller="Cars" asp-action="Create"><i class="fa fa-plus-circle"></i> Add car</button>
                                <button class="btn btn-outline-warning btn-lg" type="button" onclick="location.href='@Url.Action("Index", "Cars")'"><i class="fa fa-undo"></i> Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}