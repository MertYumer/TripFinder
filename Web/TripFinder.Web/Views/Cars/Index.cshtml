@using Microsoft.AspNetCore.Identity
@using TripFinder.Data.Models
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Index";
    var user = await this.UserManager.GetUserAsync(this.User);
}

<section id="page-title-area" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    @if (user.CarId == null)
                    {
                        <h3>You don't have a registered car. Add one.</h3>
                        <span class="title-line"><i class="fa fa-car"></i></span>
                        <div class="col-4 col-md-auto form-btn">
                            <a class="btn btn-success" asp-area="" asp-controller="Cars" asp-action="Create"><i class="fa fa-plus-circle"></i> Add car</a>
                        </div>
                    }
                    else
                    {
                        <h3>Car info</h3>
                        <span class="title-line"><i class="fa fa-car"></i></span>
                        <div class="col-4 col-md-auto">
                            <a class="btn btn-info" asp-area="" asp-controller="Cars" asp-action="Details" asp-route-id="@user.CarId"><i class="fa fa-info"></i> View details</a>
                            <a class="btn btn-warning" asp-area="" asp-controller="Cars" asp-action="Edit" asp-route-id="@user.CarId"><i class="fa fa-pencil"></i> Modify car</a>
                            <a class="btn btn-danger" asp-area="" asp-controller="Cars" asp-action="Delete" asp-route-id="@user.CarId"><i class="fa fa-trash"></i> Delete car</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>